    <style name="TransparentActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/transparent</item>
        <item name="displayOptions">showHome</item>
    </style>
    <style name="Theme.Nicestart.NoActionBar" parent="Theme.Material3.Light.NoActionBar">

    </style>
</resources>